<div class="row">
    {{#each notes}}
      <div class="col-md-3 mb-4"> <!-- Agregado mb-4 para margen inferior -->
        <div class="card h-100"> <!-- Agregado h-100 para que todas las tarjetas tengan la misma altura -->
            <div class="card-body d-flex flex-column"> <!-- Flexbox para alinear el contenido -->
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    <span class="flex-grow-1">{{title}}</span> <!-- Título ocupa más espacio -->
                    <a href="/notes/edit/{{_id}}" class="text-decoration-none">
                        <i class="fas fa-edit"></i>
                    </a>
                </h4>
                <p class="card-text flex-grow-1">{{description}}</p> <!-- Descripción ocupa más espacio -->
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-block btn-sm w-100" type="submit"> <!-- Botón ocupa el 100% del ancho -->
                    Delete
                </button>
                </form>
            </div>
        </div>
      </div>
      {{else}}
      <div class="col-md-6 mx-auto"> <!-- Limita el ancho del recuadro -->
        <div class="card text-center"> <!-- Centra el contenido -->
            <div class="card-body">
                <h1>Hello {{user.name}}</h1>
                <h5 class="card-title">There are no notes yet.</h5> <!-- Texto más visible -->
                <a href="/notes/add" class="btn btn-success btn-block w-100"> <!-- Botón verde y ancho completo -->
                    Create One!
                </a>
            </div>
        </div>
      </div>
    {{/each}}
</div>