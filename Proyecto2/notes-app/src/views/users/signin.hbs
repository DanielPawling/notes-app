<div class="row mt-4">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h1>Account Login</h1>
            </div>
            <img src="/img/22.png" class="rounded-circle mx-auto d-block m-4 logo" alt="logo">
            <div class="card-body">
                {{> messages}} <!-- Incluir el parcial de mensajes -->
                <form action="/users/signin" method="POST"> <!-- Corregido: acción del formulario -->
                    <!-- Campo Email con separación -->
                    <div class="form-group mb-3"> <!-- mb-3 agrega espacio inferior -->
                        <input type="email" class="form-control" name="email" placeholder="Email" autofocus>
                    </div>
                    <!-- Campo Password con separación -->
                    <div class="form-group mb-4"> <!-- mb-4 agrega más espacio inferior -->
                        <input type="password" name="password" class="form-control" placeholder="Password">
                    </div>
                    <!-- Botón que ocupa todo el ancho -->
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary w-100"> <!-- w-100 para ancho completo -->
                            SignIn
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>